<Page x:Class="hotel.praktika.Pages.RememberPassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotel.praktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RememberPassPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="2" HorizontalAlignment="Center" >Введите логин</TextBlock>
        <TextBox x:Name="loginBox" Grid.Row="3"/>
        <TextBlock Grid.Row="4" HorizontalAlignment="Center" >Введите логин</TextBlock>
        <TextBox x:Name="servicenumber"  Grid.Row="5"/>
        <Button Grid.Row="6" Click="ShowPassword" >напомнить</Button>
    </Grid>
</Page>
